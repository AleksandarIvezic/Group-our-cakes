<%= form_with url: sessions_path do |form| %>
  <div class=”field”>
    <%= form.label :name %>
    <%= form.text_field :name , class: "fs-3 w-75"%>
  </div>  <div class=”field”>
    <%= form.label :password %>
    <%= form.password_field :password, class: "fs-3 w-75"%>
  </div>  <br>
  <div class=”actions”>
    <%= form.submit "Login" , class: "btn btn-info"%>
  </div>
<% end %>